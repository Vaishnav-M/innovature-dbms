# Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Database Settings
# Default database for auth and company metadata
DEFAULT_DB_NAME=default_db.sqlite3

# Tenant databases will be created dynamically
# Format: {company_slug}_db.sqlite3
TENANT_DB_DIR=tenant_databases

# Media Files (for product images)
MEDIA_ROOT=media
MEDIA_URL=/media/

# CORS Settings (for frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
